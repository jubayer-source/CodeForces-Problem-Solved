//M - The New Year: Meeting Friends 
//https://codeforces.com/group/MWSDmqGsZm/contest/223206/problem/M

#include <bits/stdc++.h>
    using namespace std;
     
    int main() {
        int x1, x2, x3;
        cin >> x1 >> x2 >> x3;
     
        int a[] = {x1, x2, x3};
        sort(a, a + 3);
     
        // Meeting at a[1] (median)
        int total_distance = (a[1] - a[0]) + (a[2] - a[1]);
     
        cout << total_distance << endl;
        return 0;
    }
